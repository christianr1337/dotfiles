loadplugins '\.(js|penta)$'
group user

" show toolbar
set guioptions+=T

" autocompletion 
"   s: search engines
"   l: firefox completion
"   h: history
"   f: files
set complete=slhf

" download sort
"   -: descending order
"   +: ascending order
set downloadsort=-active,+filename,-time

" default search engine
set defsearch='yubnub'

" fullscreen mode
set fullscreen

" flashblock plugin settings
set flashblock
set fbwhitelist+=youtube.com
set fbwhitelist+=vimeo.com
set fbwhitelist+=ontwik.com
set fbwhitelist+=blip.tv

" keys for hint labeling
set hintkeys=dfghjk

" timeout to follow a hint when is non-unique
set hinttimeout=1000

" highlight all search pattern matches
set hlfind

" mapleader
set mapleader=','

" wich command open pages in a new tab
set newtab=all

" pass these keys directly to Firefox
set passkeys+=mail.google.com:acejkor<CR>
set passkeys+=plus.google.com:jk
set passkeys+=submanga.me:<Left><Down><Up><Right>
set passkeys+=submanga.com:<Left><Down><Up><Right>

" Smooth Scrollin Plugin settings
set scrollsteps=10
set scrolltime=200

" suggested engines
set suggestengines=yubnub,google

" app name after current tab URL title
set titlestring=""

" no annoying sounds
set visualbell

" new tabs
set newtab=all
