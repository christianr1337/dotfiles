Config {  font      = "xft:terminus:bold:pixelsize=18"
        , bgColor   = "black"
        , fgColor   = "white"
        , alpha     = 100
        , position  = TopW L 90
        , commands  = [ Run StdinReader
                      , Run Battery ["-t", "<acstatus> <left>%", "-L", "0", "-H", "40", 
                                     "--normal", "red", "--high", "cyan"] 10
                      , Run Date "%k:%M, %a %d %b" "date" 60
                      ]
         , sepChar  = "%"
         , alignSep = "}{"
         , template = "%StdinReader%}{%battery%   <fc=#dd0066>%date%</fc>"
        }
