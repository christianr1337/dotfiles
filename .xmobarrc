Config  { font      = "xft:terminus:bold:pixelsize=18"
        , bgColor   = "black"
        , fgColor   = "grey"
        , alpha     = 200
        , position  = TopW L 90
        , commands  = [ Run StdinReader
                      , Run CommandReader "~/.pymodoro/pymodoro.py" "pomodoro"
                      , Run Battery ["-t", "<left>%", "-L", "0", "-H", "40", 
                                     "--normal", "red", "--high", "cyan"] 10
                      , Run Date "%k:%M %a, %d.%m.%Y" "date" 60
                      ]
         , sepChar  = "%"
         , alignSep = "}{"
         , template = "%StdinReader%}%pomodoro%{%battery%   <fc=#dd0066>%date%</fc>"
        }
