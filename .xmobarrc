Config  { font      = "-xos4-terminus-bold-r-normal--18-180-72-72-c-100-iso8859-1"
        , bgColor   = "black"
        , fgColor   = "grey"
        , position  = TopW L 95
        , commands  = [ Run Date "%k:%M %a, %d.%m.%Y" "date" 10
                      , Run StdinReader
                      , Run Wireless "wlan0" ["-t", "<essid>"] 10
                      , Run Network "wlan0" ["-t", "<rx>/<tx>"] 10
                      , Run CommandReader "~/.pymodoro/pymodoro.py" "pomodoro"
                      , Run Battery ["-t", "<left>%", "-L", "0", "-H", "40", 
                                     "--normal", "red", "--high", "cyan"] 10
                      ]
         , sepChar  = "%"
         , alignSep = "}{"
         , template = "%StdinReader% :: %pomodoro%} {<fc=#ee9a00>%date%</fc> | %wlan0wi% %wlan0% | %battery%"
        }
