DULL=0
BRIGHT=1
UNDERLINE=4

FG_BLACK=30
FG_RED=31
FG_GREEN=32
FG_YELLOW=33
FG_BLUE=34
FG_VIOLET=35
FG_CYAN=36
FG_WHITE=37

FG_NULL=00

BG_BLACK=40
BG_RED=41
BG_GREEN=32
BG_YELLOW=33
BG_BLUE=34
BG_VIOLET=35
BG_CYAN=36
BG_WHITE=37

BG_NULL=00

# ANSI Escape Sequences
ESC="\033"
NORMAL="\[$ESC[m\]"
RESET="\[$ESC[${FG_WHITE};${BG_NULL}m\]"

# DULL TEXT
RED="\[$ESC[${DULL};${FG_RED}m\]"
GREEN="\[$ESC[${DULL};${FG_GREEN}m\]"
YELLOW="\[$ESC[${DULL};${FG_YELLOW}m\]"
BLUE="\[$ESC[${DULL};${FG_BLUE}m\]"
VIOLET="\[$ESC[${DULL};${FG_VIOLET}m\]"
CYAN="\[$ESC[${DULL};${FG_CYAN}m\]"
WHITE="\[$ESC[${DULL};${FG_WHITE}m\]"

# BRIGHT TEXT
BRIGHT_RED="\[$ESC[${BRIGHT};${FG_RED}m\]" 
BRIGHT_GREEN="\[$ESC[${BRIGHT};${FG_GREEN}m\]"
BRIGHT_YELLOW="\[$ESC[${BRIGHT};${FG_YELLOW}m\]"
BRIGHT_BLUE="\[$ESC[${BRIGHT};${FG_BLUE}m\]"
BRIGHT_VIOLET="\[$ESC[${BRIGHT};${FG_VIOLET}m\]"
BRIGHT_CYAN="\[$ESC[${BRIGHT};${FG_CYAN}m\]"
BRIGHT_WHITE="\[$ESC[${BRIGHT};${FG_WHITE}m\]"

# UNDERLINED TEXT
UL_YELLOW="\[$ESC[${UNDERLINE};${FG_YELLOW}m\]"

# COLORED BACKGROUND
RED_ON_WHITE="\[$ESC[${DULL};${FG_RED};${BG_WHITE}m\]"
BLACK_ON_YELLOW="\[$ESC[${DULL};${FG_BLACK};${BG_YELLOW}m\]"
NULL_BG="\[$ESC[${DULL};${BG_NULL}m\]"

function parse_git_branch {
    ref=$(git symbolic-ref HEAD 2> /dev/null) || return
    echo "("${ref#refs/heads/}")"    
}

PS1="${CYAN}[${VIOLET}\w${CYAN}]${YELLOW}"'$(parse_git_branch)'"${NULL_BG}$ "

# write previous line to disk whenever displaying the prompt
export PROMPT_COMMAND='history -a'
