#!/bin/sh
#
# Connect to the university's network.
#

if [[ $UID -ne 0 ]]; then
    error 'Run this script as root'
    exit 1
fi

export HTTP_PROXY=http://proxy.wifi.uma.es:3128/

ifconfig wlan0 up              

# stop wicd daemon
rc.d stop wicd

# wpa_supplicant
killall wpa_supplicant &> /dev/null
rm /var/run/wpa_supplicant/wlan0 &> /dev/null

wpa_supplicant -c /etc/wpa_supplicant.conf -i wlan0
