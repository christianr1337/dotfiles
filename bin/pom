#!/bin/sh

#
# Little script for controling pymodoro (https://github.com/dattanchu/pymodoro). 
#

function usage 
{
    echo "Usage:"
    echo "  pom start pomodoro_duration break_duration"
    echo "  pom stop"
    exit 1
}

function start
{
    if [[ $1 && $2 ]]
    then
       touch ~/.pomodoro_session
       echo $1 $2 > ~/.pomodoro_session
    else
        echo "Usage:"
        echo "  pom start pomodoro_duration break_duration"
        exit 1
    fi
    exit 0
}

function stop
{
    rm ~/.pomodoro_session 2> /dev/null
    exit 0
}
    
if [[ $1 ]]
then
    case $1 in
        start)  shift 
                start $1 $2
        ;;
        stop)  stop
        ;;
    esac
fi

usage
